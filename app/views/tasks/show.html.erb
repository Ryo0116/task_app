<h3>スケジュール詳細</h3>

<table>
    <tr>
        <th>タイトル</th>
        <td><%= @task.title %></td>
    </tr>
    <tr>
        <th>開始日時</th>
        <td><%= @task.start.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
        <th>終了日時</th>
        <td><%= @task.enddate.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td><%= @task.all %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
    </ul>
</div>