<h3>スケジュール新規登録</h3>

<%= render "shared/error", obj: @task %>

<%= form_with model: @task do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>

        <tr>
            <th><%= f.label :start ,"開始日時" %></th>
            <td><%= f.datetime_field :start %></td>
        </tr>

        <tr>
            <th><%= f.label :enddate ,"終了日時" %></th>
            <td><%= f.datetime_field :enddate %></td>
        </tr>

        <tr>
            <th><%= f.label :all ,"終日" %></th>
            <td><%= f.check_box :all ,{checked: true}, "true", "false" %></td>
        </tr>
    </table>

    <div>
        <ul>
            <li><%= f.submit "登録完了する"%></li>
            <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
        </ul>
    </div>
<% end %>

